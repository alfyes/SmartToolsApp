<% if !@consurso.errors.empty? %>
  <div class = "alert alert-error">
    <ul>
      <% @consurso.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-fluid" style="width: 800px; margin: 0 auto;">
  <h1 class="page-header">Ingresar Concurso</h1>
  <div class = "well">
    <%= form_for @consurso, html: { multipart: true } do |f| %>
        <div class="row col-lg-12">
          <div class="form-group col-lg-6">
            <%= f.label :name, 'Nombre' %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.label :image2, 'Imagen' %>
            <%= f.file_field :image2 %>
          </div>
        </div>
        <div class="row col-lg-12">
          <div class="form-group col-lg-6">
            <%= f.label :url, 'URL' %>
            <%= f.text_field :url, class: "form-control" %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.label :description, 'DescripciÃ³n' %>
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>
        <div class="row col-lg-12">
          <div class="form-group col-lg-6">
            <%= f.label :startDate, 'Fecha inicial' %>
            <%= f.date_select :startDate, {:start_year => Date.current.year, :end_year => 2030}, {class: "form-control date"} %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.label :endDate, 'Fecha final' %>
            <%= f.date_select :endDate, {:start_year => Date.current.year, :end_year => 2030}, {class: "form-control date"} %>
          </div>
        </div>
        <%= f.submit 'Ingresar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

