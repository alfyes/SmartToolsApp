
<div class="row">
  <a href="<%= new_concurso_url %>"><img src="/img_signo_mas.png" height="64" width="64" alt=""> Crear concurso</a>
</div>

<h1 class="my-4">Concursos inscritos</h1>

<div class="row">
  <% @concursos.each do |concurso|  %>
    <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
      <div class="card h-100">
        <a href="#"><img class="card-img-top" src="<%= url_imagen_concurso(concurso) %>" alt="" width="300px" height="200px"></a>
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to concurso.name, concurso_path(concurso), action:'show' %>
          </h4>
          URL: <%=link_to(root_url + 'contests/' + concurso.url, {:controller=>'contests',:action=>'index',:urlconcurso=>concurso.url })%><br> Â 
          <p class="card-text"><%= concurso.description %></p>
        </div>
        <div class="card-footer">
          <p class="pull-right icons">
            <a href="<%=edit_concurso_path(concurso) %>" action="edit"> <span class='glyphicon glyphicon-edit'></span> </a>
            <a href="<%=concurso_path(concurso) %>" rel="nofollow" data-method="delete" data-confirm="Esta seguro de eliminar?"><span class='glyphicon glyphicon-remove'></span></a>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
