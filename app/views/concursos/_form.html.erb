
<%= form_for @consurso, url: {action: @accion[:action]}, method: @accion[:method] ,html: { multipart: true } do |f| %>
    <div class="row col-lg-12">
      <div class="form-group col-lg-6">
        <%= f.label :name, 'Nombre' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-lg-6">
        <%= f.label :image2, 'Imagen' %>
        <%= f.file_field :image2 %>
      </div>
    </div>
    <% if @consurso.user_id.nil? || @consurso.user_id == '' %>
      <div class="row col-lg-12">
        <div class="form-group col-lg-12">
          <%= f.label :description, 'Descripción' %>
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>
    <% else %>
        <div class="row col-lg-12">
        <div class="form-group col-lg-6">
          <%= f.label :concurso_url, 'URL' %>
          <%= f.text_field :concurso_url, class: "form-control" %>
        </div>
          <div class="form-group col-lg-6">
            <%= f.label :description, 'Descripción' %>
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>
    <% end %>
    <div class="row col-lg-12">
      <div class="form-group col-lg-6">
        <%= f.label :startDate, 'Fecha inicial' %>
        <%= f.date_select :startDate, {:start_year => Date.current.year, :end_year => 2030}, {class: "form-control date"} %>
      </div>
      <div class="form-group col-lg-6">
        <%= f.label :endDate, 'Fecha final' %>
        <%= f.date_select :endDate, {:start_year => Date.current.year, :end_year => 2030}, {class: "form-control date"} %>
      </div>
    </div>
    <%= f.submit 'Ingresar', class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', concursos_path, class: 'btn btn-primary' %>
<% end %>